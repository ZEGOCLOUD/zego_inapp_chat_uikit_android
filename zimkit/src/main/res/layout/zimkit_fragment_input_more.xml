<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="im.zego.zimkitmessages.fragment.ZIMKitInputMoreFragment">

    <data>

        <variable
            name="view"
            type="android.view.View" />

        <variable
            name="vm"
            type="com.zegocloud.zimkit.components.message.viewmodel.ZIMKitInputMoreVM" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="109dp"
        android:background="@color/color_f2f2f2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_album"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/zimkit_shape_12dp_white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/zimkit_icon_album"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/zimkit_album"
            android:textColor="@color/color_707274"
            android:textSize="11sp"
            app:layout_constraintLeft_toLeftOf="@+id/cl_album"
            app:layout_constraintRight_toRightOf="@+id/cl_album"
            app:layout_constraintTop_toBottomOf="@+id/cl_album" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_file"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/zimkit_shape_12dp_white"
            app:layout_constraintLeft_toRightOf="@+id/cl_album"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/zimkit_icon_file"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/zimkit_file"
            android:textColor="@color/color_707274"
            android:textSize="11sp"
            app:layout_constraintLeft_toLeftOf="@+id/cl_file"
            app:layout_constraintRight_toRightOf="@+id/cl_file"
            app:layout_constraintTop_toBottomOf="@+id/cl_file" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>